# Exemplo de variáveis de ambiente para produção

# Database (Railway PostgreSQL)
DATABASE_HOST=your-railway-postgres-host
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-railway-postgres-password
DATABASE_NAME=railway

# Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application
NODE_ENV=production
PORT=3000

# JWT (se implementar auth real no futuro)
JWT_SECRET=your-super-secure-jwt-secret

# CORS (Frontend URL)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Public URLs (usadas para montar links em e-mails)
BACKEND_PUBLIC_URL=https://viralizaai-backend-production.up.railway.app

# SMTP (confirmação de e-mail)
# Gmail: use App Password (requer 2FA), NÃO use sua senha normal.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_gmail@gmail.com
SMTP_PASS=your_app_password

EMAIL_FROM_NAME=Viraliza.ai
EMAIL_FROM_EMAIL=your_gmail@gmail.com
